#!/bin/bash
#SBATCH --job-name=data_stats         # Job name
#SBATCH --mail-type=END,FAIL          # Mail events
#SBATCH --mail-user=andrea.papaluca@anu.edu.au     # Where to send mail
#SBATCH --ntasks=1                    # Run on a single CPU
#SBATCH --mem=16gb                    # Job memory request
#SBATCH --partition=bigdata
#SBATCH --qos=bigdata
#SBATCH --gres=gpu:0
#SBATCH --output=log/data_stats.log   # Standard output and error log
#SBATCH --time=120:00:00               # Time limit hrs:min:sec
pwd; hostname; date
    
echo "---- Generating Data Statistics ----"
source activate llama
python data_stats.py	
echo "---- Done ----"
date
    

